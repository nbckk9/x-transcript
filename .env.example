# X-Transcript Service Configuration
# Copy this file to .env and fill in the values

# Application
APP_NAME="X-Transcript"
DEBUG=True
SECRET_KEY="your-secret-key-change-in-production"
API_V1_PREFIX="/api/v1"

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/x_transcript"
# For SQLite (development)
# DATABASE_URL="sqlite+aiosqlite:///./x_transcript.db"

# Redis (for Celery broker)
REDIS_URL="redis://localhost:6379/0"

# Celery
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_URL="redis://localhost:6379/2"

# Storage
UPLOAD_DIR="./storage"
TRANSCRIPT_DIR="./transcripts"
MAX_FILE_SIZE_MB=100

# Transcription
WHISPER_MODEL="medium"  # tiny, base, small, medium, large
WHISPER_DEVICE="cpu"    # cpu or cuda

# Auth
JWT_SECRET_KEY="jwt-secret-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services
# X_COOKIE="your_twitter_cookie_for_premium_features"

# Webhook (for notifications)
WEBHOOK_SECRET="webhook-secret"
